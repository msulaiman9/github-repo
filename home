---
- name: local repo
  hosts: alawi
  tasks:
   - name: install createrepo
     yum:
       name: 
       - createrepo
       state: present
   - name: make a dir
     file:
       path: /repo
       state: directory
   - name: copy package
     shell: cp -avr /media/CentOS_6.10_Final/Packages/* /repo
   - name: make matadate
     shell: createrepo /repo
   - name: create alawi.repo
     file:
       path: /etc/yum.repos.d/alawi.repo
       state: touch
   - name: adding repolines
     blockinfile:
       dest: /etc/yum.repos.d/alawi.repo
       block: |
         [alawirepo]
         name=alawilocalrepo
         baseurl=file:///repo
         gpgcheck=0
         enabled=1
   - name: clean repo
     shell: yum clean all
  
     
